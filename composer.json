{
    "name": "suryabyte/php-validleaf",
    "description": "ValidLeaf is a package to validate given input based upon the type. It is for PHP projects, created with PHP.",
    "keywords": ["suryabyte", "validleaf", "validation"],
    "type": "library",
    "license": "BSD-2-Clause",
    "homepage": "https://github.com/suryapal-dev/php-validleaf",
    "authors": [
        {
            "role": "Developer",
            "name": "Suryapal Rao",
            "email": "suryapal.dev@gmail.com",
            "homepage": "https://github.com/suryapal-dev"
        }
    ],
    "autoload": {
        "psr-4": {
            "SuryaByte\\ValidLeaf\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SuryaByte\\ValidLeaf\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest"
        ],
        "stan": [
            "./vendor/bin/phpstan analyze"
        ]
    },
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "phpstan/phpstan": "^1.10"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
